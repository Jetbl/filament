{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"label": "runt",
			"type": "shell",
			"command": "runt -d",
			"group": "test",
			"presentation": {
			  "reveal": "always",
			  "panel": "shared"
			},
			"dependsOn": [ "build" ],
			"dependsOrder": "sequence",
		}
	]
}